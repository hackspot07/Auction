extends layout
//- block vars
 //- - var title = "Adda-Home"
block content
 div
  center
   h1 Online-Auction
   <hr></hr>
   p For Auction Master(Admin) 
    a(href="/adminLogin") Login
  br
  <hr></hr>
  h2 AUCTIONS LIST
  table(cellpadding=5 border='1')
      tr
        th ItemName
        th Last_Date
        th Status
      tr
      each topic in topics
        tr
          td 
           a(href='/itemDescription/#{topic.id}') #{topic.name}
          td #{topic.date}
          td #{topic.status}
