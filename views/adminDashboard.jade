extends logged_page_layout
block vars
 - var title = "adminDashboard"

block content
  br
  br
  a(href='/addItems') Add-Items-For-Auction
  br
  br
  h1 Upcoming Auction
  table(cellpadding=5 border=1)
      tr
        th ItemName
        th Date
        th Status
        th Description
        th Start-Auction
      tr
      each topic in upcomingAuction
        tr
          td #{topic.name}
          td #{topic.date}
          td #{topic.status}
          td #{topic.description}
          td
           form(action="/startAuction/#{topic.id}")
            if topic.status == "open" 
             input(type="submit" value="Start Auction")
            else
             input(type="submit" value="View Auction")

