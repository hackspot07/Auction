block vars
doctype html
html
  head
    title addItems #{title}
    link(rel='stylesheet', href="/stylesheets/style.css")
    h1(style = "text-align: center;") Online-Auction
    a(href='/adminDashboard') Dashboard

    div(class="topbar" align='right')  admin
      |&nbsp;... 
      a(href='/adminLogout') Logout
      hr
    block scripts
      script(type ="text/javascript" src="/javascripts/jquery-2.1.1.min.js")
      script(type ="text/javascript" src ="/javascripts/main.js")
    block content
     center
      h2 Manage Auction
      table(cellpadding=5 border=1)
          tr
            th ItemName
            th Date
            th Base Price
            th Status
            th Description
          tr
              td #{itemDetail.name}
              td #{itemDetail.date}
              td #{itemDetail.base_price}
              td #{itemDetail.status}
              td #{itemDetail.description}
                
      br 
      br 
      br 
      br 
      br 
      br 
      div(id = "showBidding" align = "center")
          label(for='bidder' ) Name Of Bidder
          input(type="text" id="bidder") 
          |&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          label(for='amount') Current Bid
          input(type="text" id="amount")








