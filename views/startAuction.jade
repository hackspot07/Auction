block vars
doctype html
html
  head
    title addItems #{title}
    link(rel='stylesheet', href="/stylesheets/style.css")
    h1(style = "text-align: center;") Online-Auction
    a(href='/adminDashboard') Dashboard

    div(class="topbar" align='right')  admin
      |&nbsp;... 
      a(href='/adminLogout') Logout
      hr
    block scripts
block content
 center
  h2 Manage Auction
  table(cellpadding=5 border=1)
      tr
        th ItemName
        th Date
        th Status
        th Description
        th Start-Auction
      tr
          td #{itemDetail.name}
          td #{itemDetail.date}
          td #{itemDetail.status}
          td #{itemDetail.description}
          td 
           input(type="submit" value="Start Auction")
